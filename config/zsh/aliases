# configuration paths
alias zshconfig="cd ~/.config/zsh/ && nvim ."
alias vimconfig="cd ~/.config/nvim/ && nvim ."
alias tmuxconfig="cd ~/.config/tmux/ && nvim ."
alias ohmyzsh="nvim ~/.oh-my-zsh"
alias kittyconfig="cd ~/.config/kitty/ && nvim ."

# others
alias vim="nvim"
alias zshsource="source ~/.config/zsh/.zshrc"
alias antidotebundle="antidote bundle <~/.config/zsh/.zsh_plugins.txt >~/.config/zsh/.zsh_plugins.zsh"

# connections [bluetooth, wifi]
alias headset="bluetoothctl connect 30:53:C1:33:99:7B"

# commands 
alias la="ls --all"
alias ll="ls -la"
alias list='ls --human-readable --size --classify -a'

alias bc='bc -l'
alias edit='nvim'

alias rm='rm -I --preserve-root'

# parenting changing perms on / #
alias chown='chown --preserve-root'
alias chmod='chmod --preserve-root'
alias chgrp='chgrp --preserve-root'
